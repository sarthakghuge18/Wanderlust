<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2>Edit your Listing </h2>
                <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input class="form-control" name="listing[title]" type="text" value="<%=listing.title%>" required>
                        <div class="invalid-feedback">Please enter a title.</div>
                    </div>
                    <div class="mb-2">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="listing[description]"
                            type="text" required><%=listing.description%></textarea>
                            <div class="invalid-feedback">Please enter a description.</div>
                    </div>
                    <div class="mb-2">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input class="form-control" name="listing[image]" type="file">
                    </div>
                    <div class="row">
                        <div class="mb-2 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input class="form-control" name="listing[price]" type="number" value="<%=listing.price%>" required>
                            <div class="invalid-feedback">Please enter a price.</div>
                        </div>
                        <div class="mb-2 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input class="form-control" name="listing[country]" type="text"
                                value="<%=listing.country%>" required>
                                <div class="invalid-feedback">Please enter a country.</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input class="form-control" name="listing[location]" type="text" value="<%=listing.location%>" required>
                        <div class="invalid-feedback">Please enter a location.</div>
                    </div>

                    <button class="btn btn-dark edit-btn ">Edit</button>
                </form>
            </div>
        </div>
    </body>